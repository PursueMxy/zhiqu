<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:id="@+id/list_banks_img_type"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_38"
        android:src="@mipmap/ic_price"/>

    <TextView
        android:id="@+id/list_banks_tv_bank_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_banks_img_type"
        android:layout_alignTop="@+id/list_banks_img_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="招商银行"
        android:textColor="#ff4e4d4d"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/list_banks_tv_bank_num"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_banks_img_type"
        android:layout_alignBottom="@+id/list_banks_img_type"
        android:layout_width="155dp"
        android:layout_height="19dp"
        android:text="账号621* **** **** 9134"
        android:textColor="#ff4e4d4d"
        android:textSize="14sp"
        />
    <ImageView
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_right_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
