<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.activity.MyResumeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/my_resume_img_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的简历"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_128"
        android:background="@color/white">
        <com.icarexm.zhiquwang.custview.CircleImageView
            android:id="@+id/my_resume_img_avatar"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_101"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:src="@mipmap/ic_avatar"/>

        <ImageView
            android:layout_alignRight="@+id/my_resume_img_avatar"
            android:layout_alignBottom="@+id/my_resume_img_avatar"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ic_man"
            />

        <TextView
            android:id="@+id/my_resume_tv_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_toRightOf="@+id/my_resume_img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王小明"
            android:maxLength="5"
            android:textColor="#ff4e4d4d"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/my_resume_tv_education"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_alignLeft="@+id/my_resume_tv_name"
            android:layout_below="@+id/my_resume_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24岁·本科"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />

        <ImageView
            android:id="@+id/my_resume_img_edit"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_alignTop="@+id/my_resume_img_avatar"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_57"
                >
                <View
                    android:layout_marginBottom="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:background="@drawable/bg_green"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="match_parent"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作经历"
                    android:textColor="@color/ff4e4d4d"
                    android:textSize="@dimen/sp_15"
                    />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_resume_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/my_resume_add_workHistory"
                android:layout_marginBottom="@dimen/dp_20"
               android:layout_marginTop="@dimen/dp_40"
               android:layout_gravity="center"
               android:text="+添加"
               android:textColor="@color/ff00b6ce"
               android:textSize="@dimen/sp_14"
               android:layout_width="@dimen/dp_194"
               android:layout_height="@dimen/dp_32"
               android:background="@drawable/btn_add_to"/>
            <RelativeLayout
                android:background="@color/fff2f2f2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/my_resume_rl_sss"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_126"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/my_resume_rl_grjj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    >
                    <View
                        android:layout_marginBottom="@dimen/dp_17"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:background="@drawable/bg_green"
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="match_parent"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人简介"
                        android:textColor="@color/ff4e4d4d"
                        android:textSize="@dimen/sp_15"
                        />
                </RelativeLayout>

                <EditText
                    android:id="@+id/my_resume_edt_personal_introduce"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_below="@+id/my_resume_rl_grjj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入个人简介"
                    android:background="@null"
                    android:textColor="#ffb5b5b5"
                    android:textSize="14sp"/>
            </RelativeLayout>

                <Button
                    android:layout_below="@+id/my_resume_rl_sss"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_51"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:text="保存"
                    android:background="@drawable/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>