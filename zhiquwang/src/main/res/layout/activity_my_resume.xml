<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MyResumeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/distribution_team_img_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的简历"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_128"
        android:background="@color/white">
        <com.icarexm.zhiquwang.custview.CircleImageView
            android:id="@+id/my_resume_img_avatar"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_101"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:src="@mipmap/ic_avatar"/>

        <TextView
            android:id="@+id/my_resume_tv_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_toRightOf="@+id/my_resume_img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王小明"
            android:maxLength="5"
            android:textColor="#ff4e4d4d"
            android:textSize="20sp"
            />

        <TextView
            android:layout_marginTop="@dimen/dp_17"
            android:layout_alignLeft="@+id/my_resume_tv_name"
            android:layout_below="@+id/my_resume_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24岁·本科"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />

        <ImageView
            android:layout_marginRight="@dimen/dp_17"
            android:layout_alignTop="@+id/my_resume_img_avatar"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>