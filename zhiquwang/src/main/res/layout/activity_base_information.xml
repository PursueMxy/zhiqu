<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.BaseInformationActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65">
        <TextView
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
        <ImageView
            android:id="@+id/base_information_img_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130">
        <com.icarexm.zhiquwang.custview.CircleImageView
            android:id="@+id/base_information_img_avatar"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_avatar"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"/>
        <ImageView
            android:layout_alignRight="@+id/base_information_img_avatar"
            android:layout_alignBottom="@+id/base_information_img_avatar"
            android:src="@mipmap/ic_edit_green"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152"
        android:background="@drawable/bg_white_8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <TextView
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
             <TextView
                 android:id="@+id/base_information_tv_name"
                 android:layout_marginRight="@dimen/dp_5"
                 android:gravity="right"
                 android:layout_toLeftOf="@+id/base_information_img_edtname"
                 android:layout_marginTop="@dimen/dp_18"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="王晓晓"
                 android:textColor="@color/ffa5a5a5"
                 android:textSize="@dimen/sp_14"/>
            <ImageView
                android:id="@+id/base_information_img_edtname"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/ic_edit"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"/>
        </RelativeLayout>
      <View
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_marginRight="@dimen/dp_10"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_1"
          android:background="@drawable/fff2f2f2"
          />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49">
            <TextView
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/base_information_tv_mobile"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13788888888"
                android:textColor="@color/ffa5a5a5"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49">
            <TextView
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证状态"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/base_information_tv_is_auth"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="right"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已认证"
                android:textColor="@color/ffa5a5a5"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>