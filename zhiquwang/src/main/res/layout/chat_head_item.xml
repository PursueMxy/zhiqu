<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/bg_white_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/chat_head_item_tv_position"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ff00b6ce"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:layout_below="@+id/chat_head_item_tv_position"
        android:id="@+id/chat_head_item_tv_salary"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ff4e4d4d"
        android:textSize="@dimen/sp_12"
        />
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/chat_head_item_rl_age"
        android:layout_below="@+id/chat_head_item_tv_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/chat_head_item_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />
        <com.icarexm.zhiquwang.custview.LabelsView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/chat_head_item_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_head_labels"
            app:labelBackground="@drawable/label_bg"
            app:labelTextColor="@color/ffa5a5a5"
            app:labelTextSize="@dimen/sp_11"
            app:labelTextPaddingBottom="@dimen/dp_1"
            app:labelTextPaddingLeft="@dimen/dp_6"
            app:labelTextPaddingRight="@dimen/dp_6"
            app:labelTextPaddingTop="@dimen/dp_1"
            app:wordMargin="@dimen/dp_10"
            app:selectType="NONE"
            app:maxLines="0"
            app:minSelect="1"
            app:isIndicator="true">
        </com.icarexm.zhiquwang.custview.LabelsView>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
