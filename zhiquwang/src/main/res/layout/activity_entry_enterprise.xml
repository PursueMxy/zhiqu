<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.EntryEnterpriseActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入职企业"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
        <ImageView
            android:padding="@dimen/dp_10"
            android:id="@+id/entry_enterprise_img_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/entry_enterprise_ll"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/entry_enterprise_tv_name"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff00b6ce"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:id="@+id/entry_enterprise_tv_salary"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />
        <RelativeLayout
            android:id="@+id/entry_enterprise_rl_age"
            android:layout_below="@+id/entry_enterprise_tv_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/entry_enterprise_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_12"
                />
            <com.icarexm.zhiquwang.custview.LabelsView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/entry_enterprise_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entry_enterprise_labels"
                app:labelBackground="@drawable/label_bg"
                app:labelTextColor="@color/ffa5a5a5"
                app:labelTextSize="@dimen/sp_11"
                app:labelTextPaddingBottom="@dimen/dp_1"
                app:labelTextPaddingLeft="@dimen/dp_6"
                app:labelTextPaddingRight="@dimen/dp_6"
                app:labelTextPaddingTop="@dimen/dp_1"
                app:wordMargin="@dimen/dp_10"
                app:selectType="NONE"
                app:maxLines="0"
                app:minSelect="1"
                app:isIndicator="true">
            </com.icarexm.zhiquwang.custview.LabelsView>
        </RelativeLayout>


        <TextView
            android:layout_below="@+id/entry_enterprise_rl_age"
            android:id="@+id/entry_enterprise_tv_address"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/ic_location_gary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffa5a5a5"
            android:textSize="12sp"
            />
        <View
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@+id/entry_enterprise_tv_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/fff2f2f2"/>
           <LinearLayout
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任职受雇日期："
            android:textColor="#ff4e4d4d"
            android:textSize="12sp"
            />

               <TextView
                   android:id="@+id/entry_enterprise_tv_today"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textColor="#ffa5a5a5"
                   android:textSize="12sp"
                   />
           </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已打卡："
            android:textColor="#ff4e4d4d"
            android:textSize="12sp"
            />
            <TextView
                android:id="@+id/entry_enterprise_tv_number_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffa5a5a5"
                android:textSize="12sp"
                android:layout_marginBottom="@dimen/dp_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>