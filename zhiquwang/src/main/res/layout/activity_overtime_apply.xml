<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.OvertimeApplyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_121">
        <ImageView
            android:id="@+id/distribution_team_img_back"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加班申请"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />

        <TextView
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年9月9日 星期一"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
    </RelativeLayout>
    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280"/>
</LinearLayout>