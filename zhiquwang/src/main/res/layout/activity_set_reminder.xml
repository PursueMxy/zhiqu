<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SetReminderActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/set_reminder_img_back"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置提醒"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上班时间"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="下班时间"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="重复"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期一、星期二、星期三"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>