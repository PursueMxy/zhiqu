<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginRight="@dimen/dp_17"
        android:id="@+id/list_message_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请好友不二兔成功注册，获得10积分"
        android:textColor="@color/ff4e4d4d"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_11"
        android:id="@+id/list_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-09-16"
        android:textColor="@color/ffa5a5a5"
        android:textSize="@dimen/sp_12"
        />

    <View
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/fff2f2f2"
        />
</LinearLayout>
