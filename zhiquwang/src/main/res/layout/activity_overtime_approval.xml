<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.OvertimeApprovalActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/overtime_approval_img_back"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加班申请"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <TextView
        android:id="@+id/overtime_approval_tv_time"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019年9月9日 星期一"
        android:textColor="@color/ff000000"
        android:textSize="@dimen/sp_17"
        />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.icarexm.zhiquwang.custview.calender.InnerGridView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/overtime_approval_gvWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7">
        </com.icarexm.zhiquwang.custview.calender.InnerGridView>

        <com.icarexm.zhiquwang.custview.calender.InnerGridView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/overtime_approval_gvWeek"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_36"
            android:id="@+id/overtime_approval_gvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:numColumns="7">
        </com.icarexm.zhiquwang.custview.calender.InnerGridView>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/overtime_approval_rl_hours"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="加班时长"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/overtime_approval_tv_hours"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0小时"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:id="@+id/overtime_approval_rl_classes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="加班班次"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/overtime_approval_tv_classes"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白班"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:id="@+id/overtime_approval_rl_festival"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="加班模式"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/overtime_approval_tv_festival"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作日"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/overtime_approval_btn_confirm"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_37"
                    android:layout_alignParentBottom="true"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:background="@drawable/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"></Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>