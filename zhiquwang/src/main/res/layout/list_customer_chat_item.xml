<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5">

       <TextView
           android:padding="@dimen/dp_6"
           android:id="@+id/list_customer_left_tv_time"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/ff000000"
           android:textSize="@dimen/sp_10"/>

       <ImageView
           android:layout_below="@+id/list_customer_left_tv_time"
           android:id="@+id/list_customer_chat_img_left"
           android:layout_marginLeft="@dimen/dp_15"
           android:layout_centerVertical="true"
           android:src="@mipmap/ic_launcher"
           android:scaleType="fitXY"
           android:layout_width="@dimen/dp_45"
           android:layout_height="@dimen/dp_45"/>
       <TextView
           android:layout_below="@+id/list_customer_left_tv_time"
           android:layout_marginRight="@dimen/dp_15"
           android:id="@+id/list_customer_chat_left_tv_content"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_toRightOf="@+id/list_customer_chat_img_left"
           android:padding="@dimen/dp_10"
           android:background="@drawable/bg_white_5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/ff000000"
           android:textSize="@dimen/sp_16"
           android:text=""/>
       <ImageView
           android:layout_below="@+id/list_customer_left_tv_time"
           android:visibility="gone"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_toRightOf="@+id/list_customer_chat_img_left"
           android:id="@+id/list_customer_chat_left_img_one"
           android:layout_width="@dimen/dp_150"
           android:layout_height="wrap_content"/>



</RelativeLayout>
