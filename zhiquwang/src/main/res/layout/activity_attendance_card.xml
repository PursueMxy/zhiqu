<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.AttendanceCardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/attendance_card_img_back"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考勤补卡"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019年9月9日 星期一"
        android:textColor="#ff4e4d4d"
        android:textSize="17sp"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:background="@drawable/btn_add_to"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月补卡剩余 5 次"
        android:textColor="@color/ff00b6ce"
        android:textSize="@dimen/sp_14"
        />
    <com.icarexm.zhiquwang.custview.calender.SignDate
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/signDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_283">
    </com.icarexm.zhiquwang.custview.calender.SignDate>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152"
        android:background="@color/white">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_51">
         <TextView
             android:gravity="center"
             android:layout_marginLeft="@dimen/dp_11"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="补卡班次"
             android:textColor="@color/ff4e4d4d"
             android:textSize="@dimen/sp_14"
             />
         <TextView
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/dp_30"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="白班"
             android:textColor="@color/ffb5b5b5"
             android:textSize="@dimen/sp_14"
             />
          <ImageView
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/dp_11"
              android:layout_alignParentRight="true"
              android:src="@mipmap/ic_right_gray"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
     </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上班时间"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="下班时间"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>