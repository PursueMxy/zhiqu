<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/FFFAFAFA"
    tools:context=".view.activity.UserAgreementActivity">
    <RelativeLayout
        android:background="@mipmap/ic_login_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_334">
        <ImageView
              android:id="@+id/user_agreement_img_back"
             android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_41"
            android:src="@mipmap/ic_left_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="#fffefefe"
            android:textSize="@dimen/sp_30"
            />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="@dimen/dp_109"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_42"
                android:id="@+id/user_agreement_rl"
                android:background="@drawable/bg_white_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_674">
                <TextView
                    android:id="@+id/user_agreement_tv_content"
                    android:lineSpacingExtra="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/ff4e4d4d"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/logon_btn_agree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_651"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@drawable/btn_login"
                android:text="我同意用户协议"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>