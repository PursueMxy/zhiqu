<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_20"
    android:orientation="vertical">
     <TextView
         android:id="@+id/dialog_affirm_tv_content"
         android:gravity="center"
         android:layout_marginRight="@dimen/dp_15"
         android:layout_marginLeft="@dimen/dp_15"
         android:layout_marginTop="@dimen/dp_30"
         android:layout_marginBottom="@dimen/dp_30"
         android:text="是否确认报名并发送简历?"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/ffb5b5b5"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <Button
            android:id="@+id/dialog_affirm_btn_back"
            android:textColor="@color/ff419cdb"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:text="取消"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/ffb5b5b5"/>
        <Button
            android:id="@+id/dialog_affirm_btn_confirm"
            android:textColor="@color/ff419cdb"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:text="确定"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
