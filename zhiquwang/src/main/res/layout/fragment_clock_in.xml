<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ClockInFragment">
<RelativeLayout
    android:id="@+id/fm_clock_in_rl_entry"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
        android:background="@color/white"
        android:id="@+id/fm_clock_in_rl_certification"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_158">
        <TextView
            android:id="@+id/fm_clock_in_tv_certification"
            android:background="@color/ff00b6ce"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="您的实名认证正在审核中，通过后即可打卡"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/fm_clock_in_tv_date"
            android:layout_below="@+id/fm_clock_in_tv_certification"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年9月9日 星期一"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:layout_below="@+id/fm_clock_in_tv_certification"
            android:id="@+id/fm_clock_in_punch_card_record"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打卡记录>"
            android:textColor="@color/ff00b6ce"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/fm_clock_in_tv_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:textColor="@color/ff0e1828"
            android:textSize="@dimen/sp_46"
            />
    </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/clock_in_ll_playStats"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/clock_in_tv_start_time"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打卡时间 9:00（上班打卡）"
                        android:textColor="@color/ff4e4d4d"
                        android:textSize="@dimen/sp_14"
                        />
                    <TextView
                        android:id="@+id/clock_in_tv_end_time"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打卡时间 9:00（下班打卡）"
                        android:textColor="@color/ff4e4d4d"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_30"
                        />
                </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="打卡协议:只作参考，实际打卡时间结合企业考勤"
                    android:textColor="@color/ff00b6ce"
                    android:textSize="@dimen/sp_13"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/dp_3"
                    android:drawableLeft="@mipmap/ic_location_green"
                    android:layout_marginTop="@dimen/dp_43"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="福建省厦门市思明区连扳国贸大厦"
                    android:textColor="@color/ff4e4d4d"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(距离500m内即可定位到企业位置)"
                    android:textColor="@color/ffa5a5a5"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:id="@+id/fm_clockin_rl_clockin"
                    android:layout_marginTop="@dimen/dp_21"
                    android:background="@drawable/bg_circle_green"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="@dimen/dp_128">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/fm_clockin_tv_clockin"
                        android:layout_marginTop="@dimen/dp_36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上班打卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_19"
                        />

                    <TextView
                        android:id="@+id/fm_clconin_tv_clockInDt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_below="@+id/fm_clockin_tv_clockin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/fm_clockin_driver"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/item_normal"/>

                <RelativeLayout
                    android:id="@+id/fm_clockin_rl_clockOut"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="@dimen/dp_128">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/fm_clockin_tv_clockOut"
                        android:layout_marginTop="@dimen/dp_36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下班打卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_19"
                        />

                    <TextView
                        android:id="@+id/fm_clcokin_tv_clockOutDt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_below="@+id/fm_clockin_tv_clockOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:33:21"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fm_clock_in_rl_attendance"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46">
                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考勤补卡"
                    android:textColor="@color/ff4e4d4d"
                    android:textSize="@dimen/sp_14"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_right_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/fm_clock_in_rl_no_entry"
    android:visibility="gone"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/fm_clock_in_no_entry"
       android:layout_centerHorizontal="true"
       android:src="@mipmap/ic_no_entry"
       android:layout_width="@dimen/dp_132"
       android:layout_height="@dimen/dp_132"/>

    <TextView
        android:layout_marginTop="@dimen/dp_21"
        android:layout_below="@+id/fm_clock_in_no_entry"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您还未入职，请先前往求职"
        android:textColor="@color/ffa5a5a5"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:layout_below="@+id/fm_clock_in_no_entry"
        android:layout_marginTop="@dimen/dp_52"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="前往求职 >"
        android:textColor="@color/ff00b6ce"
        android:textSize="@dimen/sp_15"
        />
    </RelativeLayout>
</RelativeLayout>
 <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打卡"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:id="@+id/fm_clock_in_set_reminder"
            android:layout_marginBottom="@dimen/dp_1"
            android:drawableTop="@mipmap/ic_alarm"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置提醒"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>
</FrameLayout>