<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/dp_22"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服电话"
        android:textColor="@color/ff000000"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_gravity="center"
        android:id="@+id/dialog_callphone_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0591-88888888"
        android:textColor="@color/ff4e4d4d"
        android:textSize="@dimen/sp_14"
        />

    <View
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/fff2f2f2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65">
       <TextView
           android:id="@+id/dialog_callphone_tv_back"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center"
           android:text="取消"
           android:textColor="@color/ff707070"
           android:textSize="@dimen/sp_15"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@drawable/fff2f2f2"
            />
        <TextView
            android:id="@+id/dialog_callphone_tv_call"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="呼叫"
            android:textColor="@color/ff00b6ce"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
