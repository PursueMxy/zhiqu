<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.CertificationActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
        <ImageView
            android:padding="@dimen/dp_10"
            android:id="@+id/certification_img_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/certification_rl_TypeOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/certification_rl_audit"
            android:background="@color/ff00b6ce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="1"
                android:text="审核不通过，请重新提交，原因是身份证正面照片不清晰"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />
        </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_188"
        android:orientation="vertical"
        android:background="@drawable/bg_white_8">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传身份证"
            android:textColor="#ff000000"
            android:textSize="15sp"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"
            >
            <ImageView
                android:visibility="gone"
                android:id="@+id/certification_img_dlt_front"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/centerInParent"
                android:src="@mipmap/ic_delete"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"/>
             <TextView
                 android:id="@+id/centerInParent"
                 android:layout_centerInParent="true"
                 android:layout_width="@dimen/dp_5"
                 android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/certification_img_dlt_reverse"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_delete"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/certification_img_card_frond"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/ic_img_add"/>
            <ImageView
                android:id="@+id/certification_img_card_reverse"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_img_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份证正面"
                android:textColor="@color/ff707070"
                android:textSize="@dimen/sp_13"
                android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份证反面"
                android:textColor="@color/ff707070"
                android:textSize="@dimen/sp_13"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_53">
         <TextView
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/dp_15"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="姓名"
             android:textColor="@color/ff4e4d4d"
             android:textSize="@dimen/sp_14"
             />
         <EditText
             android:background="@null"
             android:id="@+id/certification_edt_username"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/dp_100"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="请输入姓名"
             android:textColor="@color/ffb5b5b5"
             android:textSize="@dimen/sp_14"
             />
     </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/certification_edt_card_number"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入身份证号"
                android:textColor="@color/ffb5b5b5"
                android:inputType="number"
                android:textSize="@dimen/sp_14"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/certification_btn_submit"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/btn_login"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_40"/>
    </RelativeLayout>
    </LinearLayout>
   <!-- 实名认证审核中-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/certification_rl_TypeTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/certification_img_lock"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_width="@dimen/dp_136"
            android:layout_height="@dimen/dp_132"
            android:src="@mipmap/ic_certifition_lock"/>

        <TextView
            android:layout_marginTop="@dimen/dp_21"
            android:gravity="center"
            android:layout_below="@+id/certification_img_lock"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证正在审核中\n请耐心等待\n预计在24小时之内可查看审核结果"
            android:textColor="@color/ffa5a5a5"
            android:textSize="@dimen/sp_15"
            />
    </RelativeLayout>
</LinearLayout>