<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/bg_white_5"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68"
    android:layout_marginTop="@dimen/dp_10"
    >
      <ImageView
          android:id="@+id/list_message_item_img"
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_centerVertical="true"
          android:layout_width="@dimen/dp_38"
          android:layout_height="@dimen/dp_38"
          android:src="@mipmap/ic_avatar"/>

    <TextView
        android:layout_alignTop="@+id/list_message_item_img"
        android:layout_alignRight="@+id/list_message_item_img"
        android:text="1"
        android:gravity="center"
        android:background="@drawable/bg_read"
        android:id="@+id/list_message_tv_unread"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"/>
    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_message_item_img"
        android:id="@+id/list_message_item_tv_service_name"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:textColor="#ff4e4d4d"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/list_message_item_tv_enterprise_name"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_message_item_tv_service_name"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:textColor="#ffa5a5a5"
        android:maxLines="1"
        android:textSize="12sp"
        />

    <TextView
        android:layout_toRightOf="@+id/list_message_item_tv_enterprise_name"
        android:id="@+id/list_message_item_tv_job_name"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffa5a5a5"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/list_message_item_tv_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/list_message_item_tv_service_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_message_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="1"
        android:textColor="#ffa5a5a5"
        android:textSize="12sp"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/list_message_item_tv_date"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-13 05:02"
        android:textColor="#ffb5b5b5"
        android:textSize="10sp"
        />
</RelativeLayout>
