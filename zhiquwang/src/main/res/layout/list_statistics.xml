<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58">
        <TextView
            android:id="@+id/list_statistics_tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白班"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:layout_toLeftOf="@+id/list_statistics_tv_dayShift_price"
            android:layout_marginRight="@dimen/dp_3"
            android:id="@+id/list_statistics_tv_hours"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共 0 小时"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/list_statistics_tv_dayShift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="#ff01c5a6"
            android:textSize="@dimen/sp_19"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/fff2f2f2"/>
</LinearLayout>
