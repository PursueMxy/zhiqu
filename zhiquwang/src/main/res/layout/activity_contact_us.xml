<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ContactUsActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_300"
      android:background="@mipmap/ic_contact">
      <TextView
           android:layout_marginTop="@dimen/dp_36"
          android:layout_centerHorizontal="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="联系我们"
          android:textColor="@color/white"
          android:textSize="@dimen/sp_17"
          />
      <ImageView
          android:layout_marginTop="@dimen/dp_40"
          android:id="@+id/contact_us_img_back"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_width="wrap_content"
          android:src="@mipmap/ic_left_white"
          android:layout_height="wrap_content"/>
  </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_229"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_179"
        android:orientation="vertical"
        android:background="@drawable/bg_white_8">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/ic_qq"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1236445"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/ic_call_contact"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1333333333"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />

        <View
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/fff2f2f2"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系地址"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/ic_location_gary"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="福建省厦门市思明区连扳国贸大厦"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>

</RelativeLayout>