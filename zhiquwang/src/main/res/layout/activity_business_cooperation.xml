<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.BusinessCooperationActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65">
        <TextView
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业商务合作"
            android:textColor="@color/ff000000"
            android:textSize="@dimen/sp_17"
            />
        <ImageView
            android:padding="@dimen/dp_10"
            android:id="@+id/business_cooperation_img_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_left_black"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_162">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            >
            <View
                android:layout_marginBottom="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_17"
                android:background="@drawable/bg_green"
                android:layout_width="@dimen/dp_3"
                android:layout_height="match_parent"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请提交您的商务合作需求"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_15"
                />
        </RelativeLayout>
        <View
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业名称"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />

            <EditText
                android:id="@+id/business_cooperation_edt_company"
                android:layout_marginLeft="@dimen/dp_101"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/dp_33"
                android:hint="请输入企业名称"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/fff2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/ff4e4d4d"
                android:textSize="@dimen/sp_14"
                />

            <EditText
                android:id="@+id/business_cooperation_edt_mobile"
                android:layout_marginLeft="@dimen/dp_101"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/dp_33"
                android:hint="请输入联系电话"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColor="@color/ffb5b5b5"
                android:textSize="@dimen/sp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_162"
        android:background="@color/white">
        <TextView
            android:id="@+id/business_cooperation_tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商务合作需求"
            android:textColor="#ff4e4d4d"
            android:textSize="14sp"
            />
        <EditText
            android:id="@+id/business_cooperation_edt_need"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/business_cooperation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请填写您的商务合作需求"
            android:textColor="#ffb5b5b5"
            android:textSize="14sp"
            android:lineSpacingExtra="@dimen/dp_10"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台联系电话"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/business_cooperation_tv_mobile"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13333333333"
            android:textColor="#ffb5b5b5"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_right_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/business_cooperation_btn_confirm"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/btn_login"/>
    </RelativeLayout>
</LinearLayout>