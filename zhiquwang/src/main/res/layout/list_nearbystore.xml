<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_nearby_img_arr"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/ic_nearby_store"
        android:layout_width="@dimen/dp_94"
        android:layout_height="@dimen/dp_94"/>

    <TextView
        android:id="@+id/list_nearby_tv_storeName"
        android:layout_marginLeft="@dimen/dp_128"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门店名称"
        android:textColor="@color/ff4e4d4d"
        android:textSize="@dimen/sp_14"
        android:maxLength="20"
        />
    <TextView
        android:id="@+id/list_nearby_tv_distance"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300m"
        android:textColor="@color/ffa5a5a5"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/list_nearby_tv_time"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/ic_min_alarm"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_alignLeft="@+id/list_nearby_tv_storeName"
        android:layout_below="@+id/list_nearby_tv_storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上班时间：9：00-18：00"
        android:textColor="@color/ffa5a5a5"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:layout_toLeftOf="@+id/list_nearby_tv_sing_up"
        android:layout_marginRight="@dimen/dp_5"
        android:id="@+id/list_nearby_tv_address"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/ic_location_green"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_alignLeft="@+id/list_nearby_tv_storeName"
        android:layout_below="@+id/list_nearby_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff4e4d4d"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/list_nearby_tv_mobile"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/ic_call_green"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_alignLeft="@+id/list_nearby_tv_storeName"
        android:layout_below="@+id/list_nearby_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1333333333"
        android:textColor="#ff4e4d4d"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/list_nearby_tv_sing_up"
        android:gravity="center"
        android:layout_above="@+id/list_nearby_driver"
        android:background="@drawable/bg_green_4"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_22"
        android:text="报名"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />

   <View
       android:id="@+id/list_nearby_driver"
       android:layout_below="@+id/list_nearby_tv_mobile"
       android:layout_marginTop="@dimen/dp_15"
       android:layout_marginLeft="@dimen/dp_15"
       android:layout_marginRight="@dimen/dp_15"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_1"
       android:background="@color/fff2f2f2"
       />
</RelativeLayout>
